{{#if orders.length}}
<ul>
    {{#each orders}}
            <li>
                <div class="box">
                    <img src="{{img}}">
                    <h2 id="name">{{name}}</h2>
                    <p  id="discription">{{discription}}</p>
                    <div class="order-bar">
                        <p  id="price">{{price}}
                            <label >$</label>
                        </p>
                        <button class="btn-small" id="btn-create" type="submit">Order</button>
                        <input type="number" min="1" placeholder="1">
                    </div>
                </div>
            </li>
    {{/each}}
</ul>

{{else}}
<p>No Menus?!</p>
{{/if}}
<script src="./functions/func.js"></script>