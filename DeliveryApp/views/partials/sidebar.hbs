{{#if isCreate}}
<form action="/" method="GET">
        <div class="sidebar-store">
                <h2>Shops:</h2>
                <button type="submit" class="btn-name" >McDonny</button>
                <button type="submit" class="btn-name" >CFK</button>
                <button type="submit" class="btn-name" >Bufette</button>
                <button type="submit" class="btn-name" >TwoPrice</button>
        </div>
</form>
{{/if}}
{{#if isSelling}}
<div class="sidebar-order">
        <label for="name">Name:</label>
        <input type="text" id="firstname" required>
        <label for="email">Email:</label>
        <input type="email" id="email" required>
        <label for="phone">Phone:</label>
        <input type="tel" id="phone" required>
        <label for="address">Address:</label>
        <input type="text" id="address" required>
</div>
<div class="sidebar-submit">
        <label>Total Price: <span id="totalprice"></span></label>
        <button type="submit" class="btn-small" id="submit-btn">Submit</button>
</div>
{{/if}}